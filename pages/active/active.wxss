.banner{
width:100%;
height:400rpx;
position:relative;
}
.banner swiper{
width:100%;
height:100%;
}
.banner swiper image{
width:100%;
height:100%;
}
.wx-swiper-dots{position:relative;left: unset!important;right: 0;}
.wx-swiper-dots.wx-swiper-dots-horizontal{
margin-bottom:25rpx;
}
.banner .label{
width:100%;
height: 114rpx;
background:rgba(0,0,0,0.3);
position:absolute;
left:0;
bottom:0;
color:#fff;
font-size:28rpx;
line-height:114rpx;
padding-left:25rpx;
box-sizing:border-box;
}
.list{
width:100%;
height:222rpx;
border-bottom:10rpx solid #eee;
padding:0 25rpx;
box-sizing:border-box;
display:flex;
justify-content:space-between;
align-items:center;
}
.list .item{
width: 223rpx;
height: 166rpx;
position:relative;
}
.list .item .p{
color: #fdf9f9;
font-size:24rpx;
padding-left:80rpx;
}
.list .item .p1{
margin-top:40rpx;
}
.list .item .p2{
margin-top:15rpx;
}
.list .item image{
position:absolute;
width:100%;
height:100%;
z-index:-1;
}


.list1 .item{
width:100%;
background:#fff;
padding:24rpx;
box-sizing:border-box;
margin-bottom:5rpx;
}
.list1 .item .picture{
width:700rpx;
height:370rpx;
position:relative;
margin-bottom:20rpx;
}
.list1 .item .picture image{
width:100%;
}
.list1 .item .picture .label{
width:670rpx;
height: 81rpx;
background:rgba(0,0,0,0.3);
position:absolute;
left:0;
bottom:0;
color:#fff;
z-index:1;
line-height:81rpx;
padding-left:24rpx;
}
.list1 .item .label1{
width:86rpx;
height:34rpx;
background-color: #eeeeee;
border-radius: 4rpx;
text-align:center;
line-height:34rpx;
color: #4b4b4b;
font-size:22rpx;
display:inline-block;
}
.list1 .item .time{
color: #1c1c1c;
font-size:24rpx;
display:inline-block;
margin-left:18rpx;
}
.list1 .item .ico{
font-size:20rpx;
color: #7d7d7d;
display:inline-block;
margin:0 24rpx;
}
.list1 .item .price{
color: #000000;
font-size:22rpx;
display:inline-block;
}
.list1 .item .price text{
color: #666666;
font-size:24rpx;
}
.list1 .item .label2{
display:inline-block;
margin-right:13rpx;
margin-top:20rpx;
}
.list1 .item .label2 .left{
width:34rpx;
height:32rpx;
background-color: #acd598;
border-radius: 8rpx 0rpx 0rpx 8rpx;
color: #f6faff;
font-size:20rpx;
text-align:center;
line-height:32rpx;
display:inline-block;
}
.list1 .item .label2 .right{
width: 60rpx;
height: 32rpx;
border-radius: 0 8rpx 8rpx 0;
border: solid 1rpx #aeaeae;
text-align:center;
line-height:32rpx;
color: #666666;
font-size:20rpx;
display:inline-block;
border-left:none;
box-sizing:border-box;
}
.list1 .item .label3 .left{
background-color: #84ccc9;
}