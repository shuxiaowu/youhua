}
.banner{
width:100%;
height:400rpx;
}
.banner image{
width:100%;
height:100%;
}
.con1{
padding:0 27rpx;
box-sizing:border-box;
background:#fff;
}
.con1 .title{
display:flex;
justify-content:space-between;
align-items:center;
line-height:100rpx;
}
.con1 .title .name{
font-size:30rpx;
color:#333;
font-weight:bold;
}
.con1 .title .iconfont{
color: #585858;
font-size:26rpx;
}

.con1 .label2{
display:inline-block;
margin-right:13rpx;
}
.con1 .label2 .left{
width:34rpx;
height:32rpx;
background-color: #acd598;
border-radius: 8rpx 0rpx 0rpx 8rpx;
color: #f6faff;
font-size:20rpx;
text-align:center;
line-height:32rpx;
display:inline-block;
}
.con1 .label2 .right{
width: 60rpx;
height: 32rpx;
border-radius: 0 8rpx 8rpx 0;
border: solid 1rpx #aeaeae;
