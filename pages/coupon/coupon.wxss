}
.nav{
height:100rpx;
line-height:100rpx;
width:100%;
background:#fff;
display:flex;
justify-content:space-around;
}
.nav .item{
color: #666666;
font-size:30rpx;
width:110rpx;
text-align:center;
}
.nav .active{
color:#333;
border-bottom:4rpx solid #333;
}
.list{
width:690rpx;
margin:23rpx auto 0;
}
.list .item{
width:100%;
height:180rpx;
display:flex;
