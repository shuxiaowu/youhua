page{
background:#f2f2f2;
}
.nav{
display:flex;
height:81rpx;
background:#fff;
justify-content:space-around;
margin-top:14rpx;
align-items:center;
color: #454545;
font-size:28rpx;
}
.nav .item{
width:102rpx;
height:81rpx;
border-bottom:4rpx solid  #fff;
line-height:81rpx;
box-sizing:border-box;
text-align:center;
}
.nav .active{
color: #f94b4b;
border-bottom:4rpx solid #f94b4b;
}

.order0 image{
width: 325rpx;
height: 344rpx;
display:block;
margin:213rpx auto 0; 
}
.order0 .p{
text-align:center;
color: #666666;
margin-top:35rpx;
}
.list .item{
width:100%;
height: 522rpx;
background-color: #ffffff;
padding:0 20rpx;
box-sizing:border-box;
margin-bottom:20rpx;
position:relative;
}
.list .item .title{
height:91rpx;
justify-content:space-between;
display:flex;
border-bottom:1rpx solid #f1f1f1;
align-items:center;
}
.list .item .title .left{
color: #333333;
font-size:28rpx;
}
.list .item .title .right{
color: #f94b4b;
font-size:28rpx;
}
.list .item .con{
display:flex;
margin-top:35rpx;
}
.list .item .con .picture{
	width: 175rpx;
	height: 175rpx;
	border-radius: 8rpx;
  overflow:hidden;
  display:flex;
  align-items:center;
}
.list .item .con .picture image{
width:100%;
}
.list .item .con .label{
width: 476rpx;
margin-left:35rpx;
}
.list .item .con .label .top{
color: #333333;
font-size:28rpx;

width:100%;
word-break:break-all;
display:-webkit-box;
-webkit-line-clamp:2;
-webkit-box-orient:vertical;
overflow:hidden;
}
.list .item .con .label  .bottom{
font-size:28rpx;
color:#333;
display:flex;
justify-content:space-between;
margin-top:43rpx;
}
.list .item .price{
text-align:right;
color: #4b4b4b;
font-size:24rpx;
margin-top:43rpx;
padding-bottom:34rpx;
box-sizing:border-box;
border-bottom:1rpx solid #f1f1f1;
}
.list .item .price text{
color: #000000;
}
.list .item .btn_box{
height:115rpx;
width:100%;
display:flex;
justify-content:flex-end;
align-items:center;
}
.list .item .btn_box .btn{
width: 159rpx;
height: 61rpx;
border-radius: 31rpx;
border: solid 1rpx #494949;
text-align:center;
line-height:61rpx;
color: #333333;
font-size:26rpx;
margin-left:29rpx;
}
.list .item .ico{
width:220rpx;
height:220rpx;
position:absolute;
top:121rpx;
right:31rpx;
}
.list .item  .title_active{
color: #b0b0b0;
font-size:28rpx;
}