page{
background:#f2f2f2;
padding-bottom:121rpx;
}
.header{
width:100%;
height: 246rpx;
position:relative;
padding-left:31rpx;
box-sizing:border-box;
}
.header .top{
font-size: 34rpx;
color:#fff;
padding-top:50rpx;
}
.header .middle{
color: #ffded8;
font-size:24rpx;
line-height:300%;
}
.header .bottom{
font-size:28rpx;
color:#fff;
}
.header image{
position:absolute;
left:0;
top:0;
z-index:-1;
width:100%;
height:100%;
}
.site{
width:100%;
height: 189rpx;
background-color: #ffffff;
margin:15rpx auto;
}
.site .add{
width: 427rpx;
height: 87rpx;
border-radius: 44rpx;
border: solid 1rpx #ababab;
color: #747474;
font-size:34rpx;
display:flex;
justify-content:center;
align-items:center;
margin:0 auto;
position:relative;
top:50rpx;
}
.site .add .ico{
color: #747474;
font-size:56rpx;
position:relative;
bottom:2rpx;
right:10rpx;
}
.site .content{
padding:0 30rpx;
box-sizing:border-box;
display:flex;
align-items:center;
width:100%;
height:100%;
justify-content:space-between;
}

.site .content .con .top{
display:flex;
align-items:center;
}
.site .content .con .top .ico{
width: 30rpx;
height: 34rpx;
}
.site .content .con .top .name{
color: #333333;
font-size:28rpx;
margin:0 30rpx;
}
.site .content .con .top .phone{
color: #333333;
font-size:28rpx;
}
.site .content .con .bottom{
color: #5a5a5a;
font-size:24rpx;
padding-left:64rpx;
width: 527rpx;

word-break:break-all;
display:-webkit-box;
-webkit-line-clamp:2;
-webkit-box-orient:vertical;
overflow:hidden;
margin-top:17rpx;
}
.site .content .iconfont{
color: #333333;
font-size:32rpx;
}
.product{
width:100%;
height: 246rpx;
background-color: #ffffff;
display:flex;
padding-top:35rpx;
box-sizing:border-box;
}
.product .picture{
width: 175rpx;
height: 175rpx;
border-radius: 8rpx;
overflow:hidden;
display:flex;
align-items:center;
margin-left:20rpx;
}
.product .picture image{
width:100%;
}
.product .label{
width:476rpx;
margin-left:35rpx;
}
.product .label .top{
color: #333333;
font-size:29rpx;
}
.product .label .bottom{
display:flex;
justify-content:space-between;
color: #333333;
margin-top:43rpx;
}
.title{
height:98rpx;
line-height:98rpx;
padding-left:32rpx;
width:100%;
box-sizing:border-box;
}
.price_list{
background:#fff;
}
.price_list .item{
display:flex;
justify-content:space-between;
padding:0 30rpx;
box-sizing:border-box;
height:80rpx;
line-height:80rpx;
}
.price_list .item .left{
color: #666666;
font-size:28rpx;
}
.price_list .item .right{
color: #333333;
font-size:32rpx;
}
.price_list :first-child .right{
color: #000000;
}
.price_list .item_last{
height:100rpx;
line-height:100rpx;
border-top:1rpx solid #e2e2e2;
}
.yhq{
height:95rpx;
line-height:95rpx;
padding:0 30rpx;
box-sizing:border-box;
background:#fff;
display:flex;
justify-content:space-between;
margin-top:8rpx;
border-bottom:1rpx solid #e2e2e2;
}
.yhq .left{
color: #333333;
font-size:28rpx;
}
.yhq .right text{
color:#666;
font-size:28rpx;
}
.yhq .right .iconfont{
color:#333;
font-size:28rpx;
margin-left:28rpx;
}
.bzj{
width:100%;
height:146rpx;
background:#fff;
display:flex;
align-items:center;
padding:0 30rpx;
box-sizing:border-box;
justify-content:space-between;
}
.bzj .con .top{
color: #333333;
font-size:28rpx;
margin-bottom:22rpx;
}
.bzj .con .bottom{
color: #666666;
font-size:24rpx;
}
.bzj .box{
width: 34rpx;
height: 34rpx;
border: solid 1px #767676;
border-radius:100%;
text-align:center;
line-height:34rpx;
font-size:30rpx;
color:#fff;
}
.bzj  .iconfont{
background:red;
color:#fff;
border-color:red;
}
.list .item{
background:#fff;
border-bottom:1rpx solid #e2e2e2;
display:flex;
height:95rpx;
line-height:95rpx;
padding:0 30rpx;
box-sizing:border-box;
}
.list .item .left{
color: #666666;
font-size:28rpx;
}
.list .item .right{
color: #333333;
font-size:28rpx;
margin-left:43rpx;
}
.list :last-child{
border:none;
}
.pay{
width:100%;
height:100rpx;
position:fixed;
bottom:0;
left:0;
z-index:1;
display:flex;
background:#fff;
line-height:100rpx;
}
.pay .left{
width:50%;
text-align:center;
color: #4a4a4a;
font-size:24rpx;
}
.pay .left text{
color: #000000;
font-size:32rpx;
}
.pay .right{
width:50%;
background-image: linear-gradient(48deg, 
		#ff8560 0%, 
		#f86a53 50%, 
		#f04f45 100%), 
	linear-gradient(
		#313131, 
		#313131);
text-align:center;
color:#fff;
}
.shade{
position:fixed;
top:0;
left:0;
width:100%;
height:100%;
z-index:1;
background:rgba(0, 0, 0, 0.3);
}

.pay_pop{
width:100%;
height: 765rpx;
background-color: #ffffff;
position:fixed;
bottom:0;
left:0;
z-index:2;
}
.pay_pop .title{
height:114rpx;
line-height:114rpx;
border-bottom:1rpx solid #afafaf;
text-align:center;
position:relative;
}
.pay_pop .title .iconfont{
color: #a1a1a1;
font-size:35rpx;
position:absolute;
width:114rpx;
height:114rpx;
left:0;
}
.price{
color: #000000;
font-size:69rpx;
text-align:center;
margin:79rpx auto 80rpx;
}
.pay_list .item{
display:flex;
align-items:center;
padding:0 44rpx 0 33rpx;
box-sizing:border-box;
}
.pay_list .item .ico{
width: 37rpx;
height: 33rpx;
}
.pay_list .item .ico1{
width:26rpx;
height:25rpx;
}
.pay_list .item .text{
flex-grow:1;
flex-shrink:1;
margin-left:20rpx;
color: #333333;
font-size:34rpx;
}
.pay_list .item .text1{
color: #878787;
}
.pay_list .item1{
margin-bottom:61rpx;
}
.btn{
width: 561rpx;
height: 107rpx;
background-color: #464646;
border-radius: 54rpx;
text-align:center;
line-height:107rpx;
color: #ffffff;
font-size:32rpx;
margin:100rpx auto 0;
}