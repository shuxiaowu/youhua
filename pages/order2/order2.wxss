page{
background:#f2f2f2;
padding-bottom:121rpx;
}
.header{
width:100%;
height: 246rpx;
position:relative;
padding-left:31rpx;
box-sizing:border-box;
}
.header .top{
font-size: 34rpx;
color:#fff;
padding-top:50rpx;
}

.header .bottom{
font-size:28rpx;
color:#fff;
margin-top:26rpx;
}
.header image{
position:absolute;
left:0;
top:0;
z-index:-1;
width:100%;
height:100%;
}
.site{
width:100%;
height: 189rpx;
background-color: #ffffff;
margin:15rpx auto;
}
.site .add .ico{
color: #747474;
font-size:56rpx;
position:relative;
bottom:2rpx;
right:10rpx;
}
.site .content{
padding:0 30rpx;
box-sizing:border-box;
display:flex;
align-items:center;
width:100%;
height:100%;
justify-content:space-between;
}

.site .content .con .top{
display:flex;
align-items:center;
}
.site .content .con .top .ico{
width: 30rpx;
height: 34rpx;
}
.site .content .con .top .name{
color: #333333;
font-size:28rpx;
margin:0 30rpx;
}
.site .content .con .top .phone{
color: #333333;
font-size:28rpx;
}
.site .content .con .bottom{
color: #5a5a5a;
font-size:24rpx;
padding-left:64rpx;
width: 527rpx;

word-break:break-all;
display:-webkit-box;
-webkit-line-clamp:2;
-webkit-box-orient:vertical;
overflow:hidden;
margin-top:17rpx;
}
.site .content .iconfont{
color: #333333;
font-size:32rpx;
}
.product{
width:100%;
height: 246rpx;
background-color: #ffffff;
display:flex;
padding-top:35rpx;
box-sizing:border-box;
}
.product .picture{
width: 175rpx;
height: 175rpx;
border-radius: 8rpx;
overflow:hidden;
display:flex;
align-items:center;
margin-left:20rpx;
}
.product .picture image{
width:100%;
}
.product .label{
width:476rpx;
margin-left:35rpx;
}
.product .label .top{
color: #333333;
font-size:29rpx;
}
.product .label .bottom{
display:flex;
justify-content:space-between;
color: #333333;
margin-top:43rpx;
}
.title{
height:98rpx;
line-height:98rpx;
padding-left:32rpx;
width:100%;
box-sizing:border-box;
}
.list .item{
height:95rpx;
line-height:95rpx;
background:#fff;
border-bottom:1rpx solid #e2e2e2;
display:flex;
padding-left:29rpx;
box-sizing:border-box;
font-size:28rpx;
}
.list .item .left{
width:200rpx;
color:#666;
}
.list .item .right{
color:#333;
}
.list :nth-child(4){
border-bottom:12rpx solid #f2f2f2;
}
.list :nth-child(11){
margin-top:12rpx;
border:none;
}
.list :nth-child(10){
border:none;
}
.btn_box{
width:100%;
height: 100rpx;
background-color: #ffffff;
box-shadow: 0px 0px 21px 0px 
  rgba(145, 145, 145, 0.4);
position:fixed;
bottom:0;
left:0;
z-index:1;
display:flex;
justify-content:flex-end;
align-items:center;
}
.btn_box .btn{
width: 159rpx;
height: 61rpx;
border-radius: 31rpx;
border: solid 1rpx #494949;
text-align:center;
line-height:61rpx;
color: #333333;
font-size:26rpx;
margin-right:30rpx;
}