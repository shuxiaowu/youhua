page{
background:#f2f2f2;
}
.product{
width:100%;
height: 246rpx;
background-color: #ffffff;
display:flex;
padding-top:35rpx;
box-sizing:border-box;
margin-bottom:23rpx;
}

.product .picture{
width: 175rpx;
height: 175rpx;
border-radius: 8rpx;
overflow:hidden;
display:flex;
align-items:center;
margin-left:20rpx;
}
.product .picture image{
width:100%;
}
.product .label{
width:476rpx;
margin-left:35rpx;
}
.product .label .top{
color: #333333;
font-size:29rpx;
}
.product .label .bottom{
display:flex;
justify-content:space-between;
color: #333333;
margin-top:43rpx;
}
.title{
height:98rpx;
line-height:98rpx;
padding-left:32rpx;
width:100%;
box-sizing:border-box;
}
.list .item{
height:95rpx;
line-height:95rpx;
background:#fff;
border-bottom:1rpx solid #e2e2e2;
display:flex;
padding-left:29rpx;
box-sizing:border-box;
font-size:28rpx;
}
.list .item .left{
width:200rpx;
color:#666;
}
.list .item .right{
color:#333;
}


.list :last-child{
border:none;
}
.btn_box{
width:100%;
height: 100rpx;
background-color: #ffffff;
box-shadow: 0px 0px 21px 0px 
  rgba(145, 145, 145, 0.4);
position:fixed;
bottom:0;
left:0;
z-index:1;
display:flex;
justify-content:flex-end;
align-items:center;
}
.btn_box .btn{
width: 159rpx;
height: 61rpx;
border-radius: 31rpx;
border: solid 1rpx #494949;
text-align:center;
line-height:61rpx;
color: #333333;
font-size:26rpx;
margin-right:30rpx;
}
.ico{
width:220rpx;
height: 220rpx;
position:absolute;
top:536rpx;
right:30rpx;
z-index:1;
}