page{
background:#f2f2f2;
}
.banner{
width:100%;
height:404rpx;
position:relative;
}
.banner swiper{
width:100%;
height:100%;
}
.banner swiper image{
width:100%;
height:100%;
}
.wx-swiper-dots{position:relative;left: unset!important;right: 0;}
.wx-swiper-dots.wx-swiper-dots-horizontal{
margin-bottom:25rpx;
}
.banner .label{
width:100%;
height: 114rpx;
background:rgba(0,0,0,0.3);
position:absolute;
left:0;
bottom:0;
color:#fff;
font-size:28rpx;
line-height:114rpx;
padding-left:25rpx;
box-sizing:border-box;
}


.product{
display:flex;
justify-content:space-between;
margin-top:4rpx;
margin-bottom:13rpx;
flex-wrap:wrap;
}
.product .item{
width: 372rpx;
background-color: #ffffff;
padding:24rpx;
box-sizing:border-box;

}
.product .item .picture{
width:323rpx;
height:378rpx;
display:flex;
align-items:center;
overflow:hidden;
}
.product .item .picture image{
width:100%;
}
.product .item .name{
font-size:30rpx;
color: #333333;
margin-top:20rpx;
}
.product .item .price{
color: #000000;
font-size:22rpx;
margin-top:29rpx;
}
.product .item .price text{
color: #666666;
}
.product .item .time{
display:flex;
justify-content:space-between;
align-items:center;
margin-top:24rpx;
}
.product .item .time .left{
color: #1c1c1c;
font-size:26rpx;
}
.product .item .time .right{
font-size:26rpx;
color:#848484;
}
.product .item .time .icon-hongxin{
color:red;
}
.product .label{
width: 86rpx;
height: 34rpx;
background-color: #333333;
border-radius: 4rpx;
text-align:center;
line-height:34rpx;
font-size: 22rpx;
color:#fff;
margin-top:24rpx;
}
.product .label1{
width: 86rpx;
height: 34rpx;
background-color: #eeeeee;
border-radius: 4rpx;
text-align:center;
line-height:34rpx;
font-size: 22rpx;
color: #4b4b4b;
margin-top:24rpx;
}