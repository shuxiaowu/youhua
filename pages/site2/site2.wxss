page{
background:#f2f2f2;
}
.list{
border-top:10rpx solid #f2f2f2;
border-bottom:10rpx solid #f2f2f2;
}
.list .item{
height:112rpx;
padding:0 33rpx;
box-sizing:border-box;
display:flex;
align-items:center;
background:#fff;
}
.list .item .title{
color: #333333;
font-size:32rpx;
width:125rpx;
margin-right:68rpx;
}
.list .item input{
padding:0 20rpx;
box-sizing:border-box;
height:112rpx;
line-height:112rpx;
color:#999;
}
.list .item {
border-bottom:1rpx solid #f2f2f2;
}
.list .item picker{
margin-left:58rpx;
color: #999999;
position:relative;
right:40rpx;
}
.default{
width:100%;
height: 160rpx;
background-color: #ffffff;
padding:0 30rpx;
box-sizing:border-box;
display:flex;
align-items:center;
justify-content:space-between;
}
.default .right image{
width: 106rpx;
height: 49rpx;
}
.default .left .top{
font-size: 32rpx;
color:#333;
margin-bottom:29rpx;
}
.default .left .bottom{
color: #666666;
font-size:24rpx;
}
.btn{
width: 561rpx;
height: 107rpx;
background-color: #c5c5c5;
border-radius: 54px;
text-align:center;
line-height:107rpx;
font-size:32rpx;
font-weight:bold;
color:#fff;
margin:356rpx auto 0;
}
.btn_active{
background-color: #464646;
}
.del{
width:100%;
height: 110rpx;
background-color: #ffffff;
line-height:110rpx;
padding-left:29rpx;
box-sizing:border-box;
margin-top:12rpx;
color: #f72b2b;
font-size:32rpx;
}
