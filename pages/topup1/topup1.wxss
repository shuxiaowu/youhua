page{
background:#f2f2f2;
}
.title{
width:100%;
height:118rpx;
background-color: #ffffff;
line-height:118rpx;
margin:14rpx 0 14rpx;
padding:0 30rpx;
box-sizing:border-box;
}
.title .iconfont{
font-size:37rpx;
color:#09bb07;
}
.title text{
color: #333333;
font-size:34rpx;
margin-left:20rpx;
}
.money{
width:100%;
background-color: #ffffff;
padding:0 30rpx;
box-sizing:border-box;
}
.money .top{
color: #999999;
font-size:28rpx;
padding-top:45rpx;
box-sizing:border-box;
}
.money .middle{
display:flex;
font-size:74rpx;
color:#000;
align-items:center;
padding-top:66rpx;
padding-bottom:45rpx;
border-bottom:1rpx solid #e2e2e2;
}
.money .middle input{
height:100rpx;
line-height:100rpx;
margin-left:20rpx;
}
.money .bottom{
height:80rpx;
line-height:80rpx;
box-sizing:border-box;
color: #999999;
font-size:24rpx;
}
.btn{
width: 561rpx;
height: 107rpx;
background-color: #464646;
border-radius: 54rpx;
text-align:center;
line-height:107rpx;
color:#ffffff;
font-size:32rpx;
font-weight:bold;
margin:365rpx auto 0;
}